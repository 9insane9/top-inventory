<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>General store</title>
  </head>
  <body>
    <form action="/reset" method="POST">
      <button type="submit">Reset Database</button>
    </form>
    <button id="addItemBtn">Add Item</button>

    <%- include('partials/categoryList', {categoryRows}) %> <%-
    include('partials/itemList', {itemRows}) %>

    <dialog id="itemDialog">
      <form id="itemForm">
        <label for="itemNameInput">Name:</label>
        <input type="text" id="itemNameInput" name="name" required />
        <label for="itemPriceInput">Price:</label>
        <input type="number" id="itemPriceInput" name="price" required />
        <label for="itemQuantityInput">Quantity:</label>
        <input type="number" id="itemQuantityInput" name="quantity" required />
        <button type="submit">Save</button>
        <button type="button" id="cancelBtn">Cancel</button>
      </form>
    </dialog>

    <script src="/scripts/itemEdit.js"></script>
  </body>
</html>
