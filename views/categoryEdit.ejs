<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>General Store</title>
  </head>
  <body>
    <button id="addCategoryBtn">Add New Category</button>
    <a href="/categories"><button id="backBtn">Back</button></a>
    <button id="manageIconsBtn" class="dialogTrigger">Manage Icons</button>
    <ul class="categoryEditorList">
      <% categoryRows.forEach(category => { %>
      <li class="categoryEditItem" data-id="<%= category.id %>">
        <!-- icon -->
        <div class="categoryIcon">
          <% if (category.icon_svg) { %> <%- category.icon_svg %> <% } else { %>
          <img src="/icons/default.svg" alt="Default icon" />
          <% } %>
        </div>
        <!-- icon -->
        <span><%= category.name %></span>
        <button class="editBtn">Edit</button>
        <button class="deleteBtn">Delete</button>
      </li>
      <% }) %>
    </ul>

    <dialog id="categoryDialog">
      <form id="categoryForm">
        <label for="categoryName">Name:</label>
        <input type="text" id="categoryName" name="name" required />

        <fieldset id="iconSelector" class="iconSelector">
          <!-- icons will be dynamically injected here -->
        </fieldset>
        <button type="submit">Save</button>
        <button type="button" id="cancelBtn">Cancel</button>
      </form>
    </dialog>
    <dialog id="iconManagerDialog">
      <form method="dialog" class="iconManagerForm">
        <h2>Icon Manager</h2>

        <!-- Add New Icon -->
        <div class="addIconSection">
          <label for="newIconInput">Paste SVG Code:</label>
          <textarea id="newIconInput" placeholder="<svg>...</svg>"></textarea>
          <button type="button" id="addIconBtn">Add Icon</button>
        </div>

        <hr />

        <!-- Icon List -->
        <div id="iconList" class="iconList"></div>

        <menu>
          <button value="cancel" id="closeIconManager">Close</button>
        </menu>
      </form>
    </dialog>
    <script src="/scripts/categoryEdit.js"></script>
    <script src="/scripts/iconEdit.js"></script>
  </body>
</html>
